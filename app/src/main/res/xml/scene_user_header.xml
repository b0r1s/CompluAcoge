<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/user_background"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@+id/user_background">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:minHeight="150dp"
                motion:layout_constraintDimensionRatio="H,21:9"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
            <PropertySet
                android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_title">
            <Motion
                motion:pathMotionArc="startHorizontal"/>
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@id/user_settings"
                motion:layout_constraintBottom_toBottomOf="@id/user_settings"
                motion:layout_constraintVertical_bias="1.0"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_sw">
            <PropertySet
                motion:visibilityMode="ignore"/>
            <Motion
                motion:pathMotionArc="startHorizontal"/>
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                motion:layout_constraintStart_toEndOf="@id/user_title"
                motion:layout_constraintTop_toTopOf="@id/user_title"
                motion:layout_constraintBottom_toBottomOf="@id/user_title"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_image">
            <Layout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                motion:layout_constraintVertical_bias="1"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_open_procs">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toStartOf="@+id/user_closed_procs"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@+id/user_image"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_closed_procs">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toEndOf="@+id/user_open_procs"
                motion:layout_constraintTop_toTopOf="@+id/user_image"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_settings">
            <Layout
                android:layout_width="56dp"
                android:layout_height="56dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                motion:layout_constraintVertical_bias="0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start">
        <Constraint
            android:id="@+id/user_background">
            <PropertySet
                android:alpha="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_image">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                motion:layout_constraintVertical_bias="1"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_title">
            <Transform
                android:scaleX="0.833"
                android:scaleY="0.833"/>
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                motion:layout_constraintStart_toEndOf="@id/user_image"
                motion:layout_constraintTop_toTopOf="@id/user_settings"
                motion:layout_constraintBottom_toBottomOf="@id/user_settings"
                motion:layout_constraintVertical_bias="0.5"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_sw">
            <PropertySet
                motion:visibilityMode="ignore"/>
            <Transform
                android:scaleX="0.833"
                android:scaleY="0.833"/>
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                motion:layout_constraintStart_toEndOf="@id/user_title"
                motion:layout_constraintTop_toTopOf="@id/user_title"
                motion:layout_constraintBottom_toBottomOf="@id/user_title"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_open_procs">
            <Transform
                android:scaleX="0"
                android:scaleY="0"/>
            <PropertySet
                android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_closed_procs">
            <Transform
                android:scaleX="0"
                android:scaleY="0"/>
            <PropertySet
                android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/user_settings">
            <Layout
                android:layout_width="56dp"
                android:layout_height="56dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                motion:layout_constraintVertical_bias="1"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>