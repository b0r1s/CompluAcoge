<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/inst_background"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@+id/inst_background">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:layout_constraintDimensionRatio="H,21:9"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_background_color">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:layout_constraintTop_toTopOf="@id/inst_background"
                motion:layout_constraintStart_toStartOf="@id/inst_background"
                motion:layout_constraintEnd_toEndOf="@id/inst_background"
                motion:layout_constraintBottom_toBottomOf="@id/inst_background"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_title">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                motion:layout_constraintVertical_bias="1"
                motion:layout_constraintStart_toEndOf="@id/inst_image"
                motion:layout_constraintTop_toTopOf="@+id/inst_image"
                motion:layout_constraintBottom_toBottomOf="@id/inst_image"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_image">
            <Layout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                motion:layout_constraintVertical_bias="1"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="@+id/inst_helper"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_helper">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                motion:layout_constraintTop_toBottomOf="@id/inst_background"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_settings">
            <Layout
                android:layout_width="56dp"
                android:layout_height="56dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                motion:layout_constraintVertical_bias="0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start">
        <Constraint
            android:id="@+id/inst_background">
            <Transform
                android:translationY="100dp"/>
            <PropertySet
                android:alpha="0"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_background_color">
            <Transform
                android:translationY="100dp"/>
        </Constraint>
        <Constraint
            android:id="@id/inst_title">
            <Transform
                android:scaleX="0.833"
                android:scaleY="0.833"/>
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                motion:layout_constraintVertical_bias="0.5"
                motion:layout_constraintStart_toEndOf="@id/inst_image"
                motion:layout_constraintTop_toTopOf="@+id/inst_image"
                motion:layout_constraintBottom_toBottomOf="@id/inst_image"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_image">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                motion:layout_constraintVertical_bias="1"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="@+id/inst_helper"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
        <Constraint
            android:id="@+id/inst_settings">
            <Layout
                android:layout_width="56dp"
                android:layout_height="56dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                motion:layout_constraintVertical_bias="1"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>