<resources>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/cornerSmall</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
    </style>

    <style name="ButtonNotSpecial" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSpecial" parent="ButtonSpecialNight"/>

    <style name="ButtonSpecialNight.White"/>

</resources>
