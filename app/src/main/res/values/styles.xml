<resources>

    <!-- Sin night -->
    <style name="TabLayoutPointsStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/background_small_tab_indicator_mode</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/background_big_tab_indicator</item>
        <item name="tabMaxWidth">20dp</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="tabIndicatorColor">@color/whiteOpt87</item>
    </style>

    <!-- Sin night -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/ButtonNotSpecial</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonSpecial</item>
    </style>

    <!-- Sin night -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@animator/scale_dialog</item>
    </style>

    <!-- Sin night -->
    <style name="PageTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Headline4</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/cornerSmall</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">10dp</item>
    </style>

    <!-- Sin night -->
    <style name="AutoText">
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
    </style>

    <style name="ButtonNotSpecial" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSpecial" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteOpt87</item>
        <item name="iconTint">@color/whiteOpt87</item>
        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <!-- Sin night -->
    <style name="ButtonSpecial.Big">
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="shapeAppearanceOverlay">@style/Corner50</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Body1</item>
    </style>

    <!-- Sin night -->
    <style name="ButtonSpecialNight" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="iconTint">?attr/colorAccent</item>
        <item name="strokeColor">?attr/colorAccent</item>
    </style>

    <style name="ButtonSpecialNight.White">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <!-- Sin night -->
    <style name="ButtonSpecialNight.White.Big">
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="shapeAppearanceOverlay">@style/Corner50</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Body1</item>
    </style>

    <!-- Sin night -->
    <style name="Icon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="IconButton" parent="Icon">
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="strokeColor">?android:attr/textColorPrimary</item>
    </style>



    <!--         NUEVOS                      -->


    <!-- Sin night -->
    <style name="ButtonOriginal">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Sin night -->
    <style name="ButtonOriginalOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersSmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

</resources>
