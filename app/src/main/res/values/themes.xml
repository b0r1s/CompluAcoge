<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CompluAcoge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deep_purple_500</item>
        <item name="colorPrimaryVariant">@color/deep_purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/deep_purple_500</item>
        <item name="colorSecondaryVariant">@color/deep_purple_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/pink_dark</item>
        <item name="colorOnSurface">?android:textColorPrimary</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/whiteOpt87</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/splash_light</item>

        <item name="shapeAppearanceLargeComponent">@style/RoundedCornersLarge</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundedCornersMedium</item>
        <item name="shapeAppearanceSmallComponent">@style/RoundedCornersSmall</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.AppCompat.Title</item>

    </style>
</resources>
